{
  "name": "hotcakes",
  "version": "0.1.0",
  "description": "RESTful api framework built on restify",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:dylanfoster/hotcakes.git"
  },
  "scripts": {
    "build": "babel -D -d lib src",
    "clean": "rm -rf coverage docs lib",
    "lint": "eslint src test",
    "prepublish": "npm run build",
    "pretest": "npm run lint",
    "test": "mocha --compilers js:babel/register --recursive",
    "watch": "parallelshell 'npm run watch:build' 'npm run watch:test'",
    "watch:build": "chokidar 'src/**/*.js' -c 'npm run build' --polling --initial",
    "watch:test": "chokidar '{lib,test}/**/*.js' -c 'npm test' --initial --polling"
  },
  "keywords": [
    "rest",
    "api",
    "restify",
    "framework"
  ],
  "author": {
    "name": "Dylan Foster",
    "email": "dylan947@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.1",
    "chai": "^3.2.0",
    "chokidar-cli": "^1.0.1",
    "eslint": "^1.3.1",
    "eslint-config-unstandard": "^1.2.0",
    "mocha": "^2.3.0",
    "parallelshell": "^2.0.0",
    "supertest": "^1.1.0",
    "watch": "^0.16.0"
  },
  "dependencies": {
    "inflection": "^1.7.1",
    "restify": "^4.0.0"
  }
}
