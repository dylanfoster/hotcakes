{
  "name": "hotcakes",
  "version": "0.1.0-beta.1",
  "description": "RESTful api framework built on restify",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:dylanfoster/hotcakes.git"
  },
  "scripts": {
    "build": "babel -Dd lib src",
    "clean": "rm -rf coverage docs lib",
    "test": "mocha --compilers js:babel/register --recursive",
    "watch": "parallelshell 'npm run watch:build' 'npm run watch:test'",
    "watch:build": "npm run build -- --watch",
    "watch:test": "chokidar {src,test}/**/*.js -c 'npm test' --initial"
  },
  "keywords": [
    "rest",
    "api",
    "restify",
    "framework"
  ],
  "author": {
    "name": "Dylan Foster",
    "email": "dylan947@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.8.23",
    "chokidar-cli": "^1.0.1",
    "mocha": "^2.3.0",
    "parallelshell": "^2.0.0"
  }
}
